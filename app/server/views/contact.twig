{% extends 'layout.twig' %}

{% block content %}
	<div id="contact">
		<div class="centerblock">		
			<section id="mapover">
				<h1>{{footer.name}}</h1>
				<p>{{footer.address}}</p>
				<p>{{contact.email}}<br>{{contact.phone}}</p>
				<h2>munkat√°rsak:</h2>
				{% for oneStaff in contact.staff %}
					<div>
						<h3>{{oneStaff.name}}</h3>
						<ul>
							<li>{{oneStaff.title}}</li>
							<li class="education">/{{oneStaff.education}}/</li>
							<li>{{oneStaff.phone}}</li>
